
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/500x400/?cocktail);">
  <div class="container">
    <h1> <strong> Welcome to the cocktails world ! </strong></h1>
    <p>Here, have a drinks with us! </p>
    <%= link_to " Add a new cocktail", new_cocktail_path, class:"btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail|   %>
    <div class="col-12 col-md-6 col-lg-3">
       <div class="card-product" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?cocktail');">
          <div class="card-product-name">
        <p> <%= link_to cocktail.name, cocktail_path(cocktail) %></p>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



